#edit-profile-container
  %h2= t('.header')

  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!

    .form-group.col-xs-12
      .input-group
        .input-group-addon= f.label :email, t('.email')
        = f.text_field :email, class: 'form-control', autofocus: true
    .form-group.col-xs-12
      .input-group
        .input-group-addon= f.label :password, t('.password')
        = f.password_field :password, class: 'form-control', autocomplete: 'off'
      %i= "(#{(t('.minimum_length', count: @minimum_password_length) + ' / ') if @minimum_password_length}#{t('.leave_empty')})"
    .form-group.col-xs-12
      .input-group
        .input-group-addon= f.label :password_confirmation, t('.password_confirmation')
        = f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off'
    .form-group.col-xs-12
      .input-group
        .input-group-addon= f.label :current_password, t('.current_password')
        = f.password_field :current_password, class: 'form-control', autocomplete: 'off'
    .form-group.col-xs-12
      = f.submit t('.submit'), class: 'btn btn-success btn-block'
